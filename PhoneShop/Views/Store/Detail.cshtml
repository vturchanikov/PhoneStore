@model Product
@{
    Layout = "_Layout";
}
<div class="container">
    <h1 class="my-4">
        @Model.Name
    </h1>

    <div class="row">
        <div class="rol-md-8">
            <img class="bd-placeholder-img" 
                        width="275" height="225" 
                        src="@Model.ImageLink" 
                        role="img" aria-label="Placeholder: Thumbnail" />
        </div>

        <div class="col-md-4">
            <p>@Model.Description</p>
            
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <p>
                    <label>Quantity:</label>
                    <input name="quantity" style="width: 45px" class="form-control" value="1"/>
                    <span>@Model.RetailPrice$</span>
                    <button type="submit" class="btn btn-success">To Cart</button>
                </p>

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Name" value="@Model.Name" />
                <input type="hidden" name="Description" value="@Model.Description" />
                <input type="hidden" name="ShortDescription" value="@Model.ShortDescrition" />
                <input type="hidden" name="PurchasePrice" value="@Model.PurchasePrice" />
                <input type="hidden" name="RetailPrice" value="@Model.RetailPrice" />
                <input type="hidden" name="Availability" value="@Model.Availability" />
                <input type="hidden" name="ImageLink" value="@Model.ImageLink" />
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            </form>
        </div>
    </div>
</div>